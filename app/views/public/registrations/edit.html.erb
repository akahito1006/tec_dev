<div class="container">
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row mb-3">
    <div class="col">
      <h4>会員情報編集</h4>
    </div>
  </div>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row mb-3">
      <%= f.label "メールアドレス", class:"col-md-2 offset-md-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-2 form-control" %>
    </div>
    <div class="row mb-3">
      <%= f.label "パスワード", class:"col-md-2 offset-md-1" %>
      <%= f.password_field :password, autocomplete: "current-password", class:"col-md-2 form-control" %>
    </div>
    <div class="row mb-3">
      <%= f.submit "編集内容を保存", class:"col-md-2 offset-md-2 btn btn-success" %>
  <% end %>
      <%= link_to "退会する", users_unsubscribe_path, class:"col-md-2 offset-md-1 btn btn-danger" %>
    </div>
</div>