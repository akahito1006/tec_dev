<div class="container">
  <div class="row mb-3">
    <div class="col">
      <h4>記事リスト</h4>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-8 p-0 mx-auto main-visual text-center d-flex align-items-end">
        <div class="main-visual-content text-light">
          <h4>
            <%= link_to @first_article.title, article_path(@first_article.id) %>
          </h4>
        </div>
    </div>
  </div>

<!--2件目以降, Article.all.offset(1)-->
