<div class="container">
  <div class="row mb-3">
    <div class="col">
      <h4>会員情報編集</h4>
    </div>
  </div>
  
  <%= form_for(@user, html: { method: :put }) do |f| %>
    <div class="row mb-3">
      <%= f.label "ユーザーネーム", class:"col-md-2 offset-md-1" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-md-2 form-control" %>
    </div>
    <div class="row mb-3">
      <%= f.label "メールアドレス", class:"col-md-2 offset-md-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-2 form-control" %>
    </div>
    <div class="row mb-3">
      <%= f.submit "編集内容を保存", class:"col-md-2 offset-md-2 btn btn-success" %>
      <%= link_to "退会する", user_unsubscribe_path, class:"col-md-2 offset-md-1 btn btn-danger" %>
  <% end %>
    </div>
</div>