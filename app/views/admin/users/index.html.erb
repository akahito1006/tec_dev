<div class="container">
  <div class="row mb-3">
    <div class="col-md-3">
      <h4>会員リスト（全<%= @users.size %>件）</h4>
    </div>
  </div>
  <% if @users.present? %>
    <% @users.each do |user| %>
      <div class="row mb-3">
        <div class="col offset-md-1">
          <%= link_to user.name, admin_user_path(user.id) %>
        </div>
        <div class="col">
          <%= user.email %>
        </div>
        <div class="col">
          <%= user.created_at %>
        </div>
        <div class="col">
          <%= link_to "編集する", edit_admin_user_path(user.id), class:"btn btn-success py-0" %>
        </div>
        <div class="col">
          <%= link_to "削除する", admin_user_path(user.id), class:"btn btn-danger py-0", method: :delete %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="row mb-3">
      <div class="col offset-md-1">
        <h5>該当なし</h5>
      </div>
    </div>
  <% end %>
  <div class="row mb-3">
    <div class="col-md offset-md-1">
    </div>
  </div>
</div>
